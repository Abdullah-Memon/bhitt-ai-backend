# Gunicorn systemd service for Bhitt AI backend
# Place this file at /etc/systemd/system/bhitt-ai-backend.service

[Unit]
Description=Bhitt AI Backend Gunicorn Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/sindhai/www/bhitt-ai-backend
Environment="PATH=/home/sindhai/www/bhitt-ai-backend/venv/bin"
ExecStart=/home/sindhai/www/bhitt-ai-backend/venv/bin/gunicorn -w 4 -b 127.0.0.1:8000 run:app
Restart=always

[Install]
WantedBy=multi-user.target
